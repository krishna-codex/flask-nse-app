# Use official Python slim image
FROM python:3.11-slim-bullseye

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive

# Create working directory
WORKDIR /app

# System dependencies for Chrome & Selenium
RUN apt-get update && apt-get install -y \
    wget curl gnupg unzip fonts-liberation \
    libnss3 libxss1 libasound2 libx11-xcb1 libxcomposite1 libxcursor1 \
    libxdamage1 libxi6 libxtst6 libxrandr2 libu2f-udev xdg-utils \
    libgbm1 libglib2.0-0 libgtk-3-0 ca-certificates \
    chromium chromium-driver \
    && rm -rf /var/lib/apt/lists/*

# Install pip, virtualenv, and Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir virtualenv && \
    virtualenv venv && \
    . venv/bin/activate && \
    pip install --no-cache-dir -r requirements.txt

# Copy the app
COPY . .

# Show real-time logs (force Python to not buffer output)
ENV PYTHONUNBUFFERED=1

# Entrypoint for running the app
CMD ["/app/venv/bin/python", "app.py"]

FROM python:3.11-slim-bullseye

ENV PYTHONUNBUFFERED=1
ENV CHROME_BIN=/usr/bin/chromium
ENV CHROMEDRIVER_PATH=/usr/bin/chromedriver

RUN apt-get update && apt-get install -y --no-install-recommends wget curl unzip gnupg ca-certificates chromium chromium-driver build-essential libglib2.0-0 libnss3 libgconf-2-4 libx11-xcb1 libxcomposite1 libxcursor1 libxdamage1 libxrandr2 libgbm-dev libasound2 libatk-bridge2.0-0 libgtk-3-0 && apt-get clean && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN python -m venv /opt/venv && /opt/venv/bin/pip install --upgrade pip && /opt/venv/bin/pip install -r requirements.txt

ENV PATH="/opt/venv/bin:$PATH"

COPY . .

RUN chmod +x /usr/bin/chromedriver

CMD ["python", "app.py"]
